<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background ="#0B081A"
    android:orientation="vertical">

    <!-- Are you currently using a Fitbit? -->
    <TextView
        android:id="@+id/riskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Based on the information provided, you met of the risk factors for COVID-19. \n\nYour overall risk level is:"
        android:fontFamily="@font/raleway2"
        android:textColor="@color/white"
        android:textSize= "25dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        />

    <!-- Risk Assesment -->
    <TextView
        android:id="@+id/riskEvaluationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Low"
        android:fontFamily="@font/raleway2"
        android:layout_below="@+id/riskText"
        android:textColor="@color/white"
        android:textSize= "30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />


</RelativeLayout>